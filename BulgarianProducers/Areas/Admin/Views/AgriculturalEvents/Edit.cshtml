@model AddAgriculturalEventFormModel
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Промени продукта </h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place"></label>
                <input asp-for="Place" class="form-control">
                <span asp-validation-for="Place" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control">
                <span asp-validation-for="StartDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="EndDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Описание..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form__row active">
                    <label asp-for="Image1">Добави снимка:</label>
                    <textarea asp-for="Image1" class="form-control"></textarea>
                    <span asp-validation-for="Image1" class="small text-danger"></span>
                </div>

                <div class="form__row hidden">
                    <label asp-for="Image2">Добави снимка:</label>
                    <textarea asp-for="Image2" class="form-control"></textarea>
                    <span asp-validation-for="Image2" class="small text-danger"></span>
                </div>

                <div class="form__row hidden">
                    <label asp-for="Image3">Добави снимка:</label>
                    <textarea asp-for="Image3" class="form-control"></textarea>
                    <span asp-validation-for="Image3" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary js-show-more" value="Добави снимка!">
                <span class="hidden js-show-note">samo 3 klika imash we</span>
            </div>
            <div asp-validation-summary="All">
                <span>Please correct the following errors</span>
            </div>
            <input asp-route-id="@Model.Id" class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>