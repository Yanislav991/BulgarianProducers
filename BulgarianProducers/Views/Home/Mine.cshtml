@model List<ProductsAndServicesListingModel>
@{
    var i = 0;
}
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Име</th>
            <th scope="col">Цена</th>
            <th scope="col">Добавено на:</th>
            <th scope="col">Последна промяна:</th>
            <th scope="col">Тип:</th>
            <th scope="col">Edin</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var element in Model)
        {
            i++;
        <tr>
            <th scope="row">@i</th>
            <td>@element.Name</td>
            <td>@element.Price</td>
            @*TODO: ToString!!! In controller and separate view models*@
            <td>@(element.CreatedOn.HasValue ? element.CreatedOn.Value.ToString("d") : "-")</td>
            <td>@(element.UpdatedOn.HasValue ? element.CreatedOn.Value.ToString("d") : "-")</td>
            <td>@(element.IsProduct?"Продукт":"Услуга")</td>
            @if (element.IsProduct)
            {
                <td>
                    <a asp-controller="Products" asp-action="Edit" class="btn btn-primary" asp-route-id="@element.Id" asp-route-userId="@element.UserId"><i class="fas fa-edit"></i></a>
                </td>
                <td>
                    <a asp-controller="Products" asp-action="Delete" class="btn btn-primary" asp-route-id="@element.Id" asp-route-userId="@element.UserId"><i class="fas fa-trash"></i></a>
                </td>
            }
            else
            {
                <td>
                    <a asp-controller="Services" asp-action="Edit" class="btn btn-primary" asp-route-id="@element.Id" asp-route-userId="@element.UserId"><i class="fas fa-edit"></i></a>
                </td>
                <td>
                    <a asp-controller="Services" asp-action="Delete" class="btn btn-primary" asp-route-id="@element.Id" asp-route-userId="@element.UserId"><i class="fas fa-trash"></i></a>
                </td>
            }
        </tr>
        }

    </tbody>
</table>