@model AddServiceFormModel
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Промени продукта </h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInformation"></label>
                <textarea asp-for="AdditionalInformation" rows="4" class="form-control"></textarea>
                <span asp-validation-for="AdditionalInformation" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeNeeded"></label>
                <textarea asp-for="TimeNeeded" rows="4" class="form-control"></textarea>
                <span asp-validation-for="TimeNeeded" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceTypeId"></label>
                <select asp-for="ServiceTypeId" class="form-control">
                    @foreach (var category in Model.ServiceTypes)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="ServiceTypeId" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>