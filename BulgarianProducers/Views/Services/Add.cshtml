@model AddServiceFormModel
@{
    ViewData["Title"] = "Добавете услуга";
}
<form method="post">
    <div class="form-group">
        <label asp-for="Name">Вид на услугата</label>
        <input asp-for="Name" class="form-control" placeholder="Вид услуга...">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <input asp-for="Price" class="form-control" placeholder="00.00">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeNeeded">Времетраене за свършена работа.(Часове)</label>
        <input asp-for="TimeNeeded" class="form-control" placeholder="00.00">
        <span asp-validation-for="TimeNeeded    " class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Линк за снимка</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="https://www...">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceTypeId">Изберете категория на продукта си:</label>
        <select asp-for="ServiceTypeId" class="form-control">
            @foreach (var service in Model.ServiceTypes)
            {
                <option value="@service.Id">@service.Name</option>
            }
        </select>
        @*<span asp-validation-for="ServiceTypeId" class="small text-danger"></span>*@
    </div>
    <div class="form-group">
        <label asp-for="AdditionalInformation">Описание и допълнителна информация за продукта!</label>
        <textarea asp-for="AdditionalInformation" class="form-control" rows="4"></textarea>
        <span asp-validation-for="AdditionalInformation" class="small text-danger"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Добави продукта си за продажба!">
</form>