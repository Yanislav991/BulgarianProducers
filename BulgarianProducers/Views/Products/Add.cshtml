@model AddProductFormModel
@{
    ViewData["Title"] = "Add Product.";
 }
<form method="post">
    <div class="form-group">
        <label asp-for="Name">Име на продукта</label>
        <input asp-for="Name" class="form-control" placeholder="Име на продукта...">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <input asp-for="Price" class="form-control" placeholder="00.00">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Линк за снимка на продукта</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="https://www...">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Изберете категория на продукта си:</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание и допълнителна информация за продукта!</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Добави продукта си за продажба!">
</form>