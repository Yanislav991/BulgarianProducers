@model AgriculturalEventInfoModel
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@Model.Name ще се проведе във @Model.Place</h1>
            <p class="lead">@Model.StartDate - @Model.EndDate</p>
            <p class="lead">@Model.Description</p>
        </div>
    </div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.ImageUrls.Count(); i++)
        {
            var image = Model.ImageUrls[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@image" alt="@Model.Name">
                <div class="carousel-caption d-none d-md-block">
                   
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>